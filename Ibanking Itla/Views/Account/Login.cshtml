@model ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";


}


<link href="~/css/signin.css" rel="stylesheet">

<br />
<br />
<br />


<div align ="center">
    <div class="text-center bg-light" style="width:25rem">


        <form asp-action="Login" method="post" class="form-signin">
            <img class="mb-4" src="~/img/logo.png" alt="" width="72" height="72">
            <h1 class="h4 mb-3 font-weight-normal">Iniciar Sesion</h1>
            <div asp-validation-summary="All" >
                <span class="text-danger"></span>
            </div>
            <div class="alert alert-danger" role="alert" style="display:@ViewBag.mostrar;">
                <h4 class="alert-heading">Tu Cuenta esta Inactiva!</h4>
                <p>Al registrarte te hemos enviado un mail a tu correo electronico para que puedas activar tu cuenta.</p>
                <hr>
                <p class="mb-0">No tendras acceso a la App sin haber activado tu cuenta! Apurate.</p>
            </div>
            <label class="sr-only">Usuario</label>
            <input asp-for="User" class="form-control" placeholder="Usuario">
            <label class="sr-only">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña">

            <button class="btn btn-lg btn-primary btn-block" type="submit">Iniciar Sesión</button>

            <p class="mt-5 mb-3 text-muted">&copy; 2020-2020</p>

        </form>
    </div>
</div>