<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ibanking Itla</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/8f3f7213dc.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sitein.css" />

</head>
<body>

    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>@ViewData["Usuario"]Luis Enrique Franco</h3>
                <h3 class="h5">Administrador</h3>
                <strong>ITLA</strong>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-action="Index">
                        <i class="fa fa-home"></i>
                        Home
                    </a>
                </li>
                <li>
                    <a asp-action="Management">
                        <i class="fa fa-cog"></i>
                        Management
                    </a>

                </li>

            </ul>

        </nav>

        <div class="container">
            <br />
            <nav class="navbar navbar-light bg-light">
                <a class="navbar-brand">IBanking Itla</a>
 
                <form  class="form-inline">
                    <button asp-controller="Account" asp-action="Logout" class="btn btn-danger my-2 my-sm-0">
                        <i class="fa fa-power-off" aria-hidden="true"></i>
                        Salir
                    </button>
                </form>
            </nav>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <script type="text/javascript">
        $(window).on('resize', function (e) {
            var windowWidth = $(window).width();

            if (windowWidth < 1024) {
                $('#sidebar').toggleClass('active');
            } else {
                $('#sidebar').toggleClass('active');            }
        });
        
    </script>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Ibanking Itla - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
