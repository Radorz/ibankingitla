@model ViewModels.PagosViewModel

@{

    ViewData["Title"] = "Pagos Prestamos";
    Layout = "~/Views/Shared/_ClienteLayout.cshtml";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<p class="text-primary h4"> Pagos de Prestamos</p>
<p class="text-muted ml-3">
    Ingrese la Información Correspondiente
</p>
<div class="card bg-light">
    <div class="card-header bg-primary text-light text-center">
        <a asp-action="Index" asp-controller="Cliente" class="btn btn-success">Volver</a>
        Pago a Prestamos
    </div>
    <article class="card-body mx-auto" style="width: 400px;">
        <form method="post">
            <div class="text-center"> <span asp-validation-for="Cdestino" class="text-danger"></span></div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-id-badge"></i> </span>
                </div>
                <select asp-for="Cdestino" asp-items="@(new  SelectList(Model.Cuentasdestino))" class="custom-select">
                    <option selected>Prestamo a pagar</option>

                </select>

            </div>
            <div class="text-center"> <span asp-validation-for="Corigen" class="text-danger"></span></div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-id-badge"></i> </span>
                </div>
                <select asp-for="Corigen" asp-items="@(new  SelectList(Model.Cuentas))" class="custom-select" title="Cuenta Origen">
                    <option>Cuenta Origen</option>

                </select>

            </div>
            <div class="text-center">
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-money"></i> </span>
                </div>
                <input asp-for="Monto" class="form-control" placeholder="Monto" type="number" value="">
            </div>

            <input type="hidden" value="Inactivo" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Siguiente</button>
            </div>

        </form>
    </article>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}